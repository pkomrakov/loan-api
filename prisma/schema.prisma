generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loan {
  id              String   @id @default(uuid())
  applicantName   String
  propertyAddress String
  eligible        Boolean
  reason          String
  creditScore     Int
  monthlyIncome   Float
  requestedAmount Float
  loanTermMonths  Int
  crimeGrade      String
  createdAt       DateTime @default(now())
}
